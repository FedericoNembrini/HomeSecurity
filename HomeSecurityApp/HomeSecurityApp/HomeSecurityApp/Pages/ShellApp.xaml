<?xml version="1.0" encoding="utf-8" ?>
<Shell  xmlns="http://xamarin.com/schemas/2014/forms"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:pages="clr-namespace:HomeSecurityApp.Pages"
        x:Class="HomeSecurityApp.Pages.ShellApp"
        xmlns:utility="clr-namespace:HomeSecurityApp.Utility"
        FlyoutBehavior="Flyout">
    
    <Shell.FlyoutHeader>
        <pages:FlyoutHeader />
    </Shell.FlyoutHeader>
    
    <ShellItem Title="Home">
        <ShellSection>
            <ShellContent ContentTemplate="{ DataTemplate pages:StreamList }" />
        </ShellSection>
    </ShellItem>
    <ShellItem Title="StreamListManagement">
        <ShellSection>
            <ShellContent ContentTemplate="{ DataTemplate pages:StreamListManagement }" />
        </ShellSection>
    </ShellItem>
</Shell>