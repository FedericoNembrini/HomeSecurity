<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeSecurityApp.Pages.HomePage"
             xmlns:shared="clr-namespace:LibVLCSharp.Forms.Shared;assembly=LibVLCSharp.Forms">

    <Shell.TitleView>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="0,16,0,0">
            <Label FontSize="Large" FontAttributes="Bold" Text="Home Page" TextColor="{StaticResource TextColor}" VerticalOptions="Center" />
        </StackLayout>
    </Shell.TitleView>
    
    <ContentPage.Content>
        <ScrollView VerticalScrollBarVisibility="Default" Orientation="Vertical" BackgroundColor="Black">
            <Grid x:Name="homeGrid">
            </Grid>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>  
